#include<stdio.h>
 #include<string.h>

int main()
 {

int c1=0,c2=0,c3=0;
 char s[100];

gets(s);

int ln = strlen(s);

int i,j;
 for (  i=0; i<ln; i++)
 {

if (s[i]=='1')  c1++;
 if (s[i]=='2')  c2++;
 if (s[i]=='3')  c3++;
 }
 for ( j=0; j<c1; )
 {
 printf("1");j++;
 if (j<c1 ||  c2!=0 ||c3!=0)  printf("+");
 else  {

if ( c2==0 && c3==0){printf("\n");
 return 0;}
 }
 }
